<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini E Ticaret</title>


    @*jbootstrap css *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">


    @RenderSection("Styles", false)
</head>
<body class="bg-warning">
    @await Html.PartialAsync("_navbarPartialView")


    <div class="mt-3">
        @{
            var menuSection = IsSectionDefined("AdminMenu") ? "AdminMenu" :
                              IsSectionDefined("SellerMenu") ? "SellerMenu" :
                              IsSectionDefined("CustommerMenu") ? "CustommerMenu" : null;
        }

        @if (menuSection != null)
        {
            <div class="row mx-0">
                <div class="col-md-2 p-0 ">
                    @await RenderSectionAsync(menuSection)
                </div>
                <div class="col-md-10 ps-3">
                    @await Html.PartialAsync("_seachBoxPartialView") 
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row mx-2">
                <div class="col-md-12 p-0">
                    @RenderBody()
                    @await RenderSectionAsync("badRequest", false)
                </div>
            </div>
        }
    </div>


    @RenderSection("Scripts", false)

    @*jQuer ve  Validation*@
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @*Bootstrap JS dosyaları*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

    @*FontAwesome*@
    <script src="https://kit.fontawesome.com/7cc8b9dbd2.js" crossorigin="anonymous"></script>
</body>
</html>