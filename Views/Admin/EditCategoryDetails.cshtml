@model Category



<form asp-action="EditCategoryDetails" asp-controller="Admin" method="post">

    <div class="form-group row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label font-weight-bold">Kategori İsmi</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" placeholder="Kategori İsmi">
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="Name"></span>
            </div>
        </div>
    </div>


    <div class="form-group row mb-3">
        <label asp-for="IsActive" class="col-sm-2 col-form-label font-weight-bold" for="isActiveCheckbox">Aktif mi?</label>
        <div class="col-sm-10 pt-2">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" asp-for="IsActive" class="custom-control-input" id="isActiveCheckbox" />
                <label class="custom-control-label"> </label>
            </div>
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="IsActive"></span>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group row mb-3">
        <div class="col-sm-12">
            <button class="btn btn-info btn-block" type="submit">Düzenle</button>
        </div>
    </div>
</form>


@if (TempData["CategoryEdited"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["CategoryEdited"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

