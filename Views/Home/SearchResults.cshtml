@model IEnumerable<ProductViewModel>

<h2 class="text-center">Arama Sonuçları</h2>

@if (Model != null && Model.Any())
{
	<div class="row">
		@foreach (var product in Model)
		{
			<div class="col-md-3 mb-4">
				<div class="card shadow-sm">
					<a href="@Url.Action("Detail", "Products", new { id = product.Id })">
						<img src="@product.ImgUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
					</a>
					<div class="card-body">
						<h5 class="card-title">@product.Name</h5>
						<p class="card-text text-primary font-weight-bold">@product.Price.ToString("0.00") ₺</p>
						<p class="card-text text-success">
							@if (product.StockCount > 0)
							{
								@($"Stok: {product.StockCount}")
							}
							else
							{
								<span class="text-danger">Tükendi</span>
							}
						</p>
					</div>
				</div>
			</div>
		}
	</div>
}
else
{
	<p class="text-center">Arama kriterlerine uygun ürün bulunamadı.</p>
}
