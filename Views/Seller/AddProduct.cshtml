@model AddProductViewModel


@if (TempData["ProductAdded"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["ProductAdded"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="AddProduct" asp-controller="Seller" method="post" enctype="multipart/form-data">
    <div class="form-group row mb-3 mx-1">
        <label asp-for="Name" class="col-sm-2 col-form-label font-weight-bold">Ürün Adı</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" placeholder="Ürün Adı">
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="Name">
                </span>
            </div>
        </div>
    </div>
    <div class="form-group row mb-3 mx-1">
        <label asp-for="Description" class="col-sm-2 col-form-label font-weight-bold">Ürün Açıklaması</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" placeholder="Ürün Açıklaması"></textarea>
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="Description">
                </span>
            </div>
        </div>
    </div>
    <div class="form-group row mb-3 mx-1">
        <label asp-for="Price" class="col-sm-2 col-form-label font-weight-bold">Ürün Fiyatı</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Price" class="form-control" placeholder="Ürün Fiyatı" min="0" step="0.01">
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="Price">
                </span>
            </div>
        </div>
    </div>
    <div class="form-group row mb-3 mx-1">
        <label asp-for="StockCount" class="col-sm-2 col-form-label font-weight-bold">Stok Miktarı</label>
        <div class="col-sm-10">
            <input type="number" asp-for="StockCount" class="form-control" placeholder="Stok Miktarı" min="0" step="1">
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="StockCount">
                </span>
            </div>
        </div>
    </div>
    <div class="form-group row mb-3 mx-1">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label font-weight-bold">Ürünün Kategorisi</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control bg-light">
                <option value="" selected select disabled>Lütfen Ürünün Kategorisini Seçiniz</option>
            </select>
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="CategoryId">
                </span>
            </div>
        </div>
    </div>

    <div class="form-group row mb-3 mx-1">
        <label asp-for="ProductPhoto" class="col-sm-2 col-form-label font-weight-bold">Ürün Fotoğrafı</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="ProductPhoto" type="file" class="custom-file-input" aria-describedby="ProductPhotoHelp" accept=".jpeg,.jpg,.png">
                <label class="custom-file-label" for="ProductPhoto" data-browse="Seç">Fotoğraf Seç</label>
            </div>
            <small id="ProductPhotoHelp" class="form-text text-danger">
                Lütfen JPEG, JPG veya PNG formatında bir fotoğraf yükleyin.
            </small>
            <div class="mt-2">
                <span class="font-weight-bold text-danger bg-light rounded" asp-validation-for="ProductPhoto"></span>
            </div>
        </div>
    </div>


    <div class="form-group row mb-3 mx-3">
        <button type="submit" class="col btn btn-dark rounded mb-2">Ürün Ekle</button>
    </div>

</form>



